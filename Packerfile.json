{
  "builders": [
    {
      "communicator": "ssh",
      "source_path": "geerlingguy/centos7",
      "provider": "virtualbox",
      "add_force": true,
      "type": "vagrant"
    }
  ],
  "provisioners":[
       {
        "type": "shell",
        "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
        "inline": [
            "sleep 30",
            "echo '%sudo    ALL=(ALL)  NOPASSWD:ALL' >> /etc/sudoers", 
            "echo 'StratoProVM' > /etc/hostname",
            "echo 'This Virtual Machine is brought to you by the Church Of Baal the Grand. Enjoy !' > /etc/motd" 
        ]
       }


  ],
  "post-processors": [
    {
     "type": "checksum",
     "output": "output-vagrant/checksum.txt",
     "checksum_types": ["sha256"] 
    }
  ]
}

