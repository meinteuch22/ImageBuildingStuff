SCREEN_NAME="my_dev_machine"
if ! screen -list | grep -q "$SCREEN_NAME"; then
    screen -AdmS "$SCREEN_NAME" -t localhost
    sleep 0.3

    screen -S "$SCREEN_NAME" -X screen -t friendlybox /vagrant/script/friendlybox.sh
    sleep 0.6
    screen -S "$SCREEN_NAME" -X screen -t 'dummy tail (log)' tail -f /vagrant/tail.txt
    sleep 0.6

fi
